<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <div>
        <%= simple_form_for(resource,
                            :as => resource_name,
                            :url => invitation_path(resource_name),
                            :html => { :class => 'form-horizontal' },
                            :method => :post) do |f| %>
            <div class="page-header">
              <h3><%= t "devise.invitations.new.header" %><small></small>
                <span class="pull-right">
                  <%= f.button :submit,
                               t("devise.invitations.new.submit_button"),
                               :class => 'btn btn-primary' %>
                </span>
              </h3>
            </div>

            <%= devise_error_messages! %>

            <fieldset>
              <% resource.class.invite_key_fields.each do |field| -%>
                <%= f.input field, class: 'input-normal',
                          controls_html: { class: 'col-lg-8' },
                          label_html: { class: 'col-lg-4' },
                          input_html: { :class => 'form-control', type: :text } %>
              <% end -%>
              <%= f.input :first_name, class: 'input-normal',
                          controls_html: { class: 'col-lg-8' },
                          label_html: { class: 'col-lg-4' },
                          input_html: { :class => 'form-control', type: :text } %>
              <%= f.input :last_name, class: 'input-normal',
                          controls_html: { class: 'col-lg-8' },
                          label_html: { class: 'col-lg-4' },
                          input_html: { :class => 'form-control', type: :text } %>
            </fieldset>
        <% end %>
        <%= render partial: 'devise/shared/links' %>
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
