<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <%= simple_form_for resource,
                          :as => resource_name,
                          :url => invitation_path(resource_name),
                          :html => { class: 'form form-horizontal' },
                          :method => :put do |f| %>
          <div class="page-header">
            <h3><%= t 'devise.invitations.edit.header' %><small></small>
              <span class="pull-right">
                <%= f.submit t('devise.invitations.edit.submit_button'), :class => 'btn btn-primary' %>
              </span>
            </h3>
          </div>

          <%= devise_error_messages! %>

          <fieldset>
            <%= f.hidden_field :invitation_token %>
            <%= f.input :first_name, class: 'input-normal',
                        controls_html: { class: 'col-lg-8' },
                        label_html: { class: 'col-lg-4' },
                        :input_html => { :class => 'form-control', :type => :text } %>
            <%= f.input :last_name, class: 'input-normal',
                        controls_html: { class: 'col-lg-8' },
                        label_html: { class: 'col-lg-4' },
                        :input_html => { :class => 'form-control', :type => :text } %>
            <%= f.input :password, class: 'input-normal',
                        controls_html: { class: 'col-lg-8' },
                        label_html: { class: 'col-lg-4' },
                        :input_html => { :class => 'form-control', :type => :password } %>
            <%= f.input :password_confirmation, class: 'input-normal',
                        controls_html: { class: 'col-lg-8' },
                        label_html: { class: 'col-lg-4' },
                        :input_html => { :class => 'form-control', :type => :password } %>
      <% end %>
      </fieldset>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
