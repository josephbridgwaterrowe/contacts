<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <div>
        <%= simple_form_for(resource,
                           :as => resource_name,
                           :url => password_path(resource_name),
                           :html => { :class => 'form-horizontal', :method => :post }) do |f| %>
            <div class="page-header">
              <h3>Forgot your password?<small></small>
                <span class="pull-right">
                  <input type="submit" class="btn btn-primary" value="Send" />
                </span>
              </h3>
            </div>

            <%= f.error_notification %>
            <%= devise_error_messages! %>

            <fieldset>
              <%= f.input :email,
                          :autofocus => true,
                          :class => 'input-normal',
                          controls_html: { class: 'col-lg-8' },
                          label_html: { class: 'col-lg-4' },
                          input_html: { class: 'form-control', type: :text },
                          :require => true %>
            </fieldset>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
