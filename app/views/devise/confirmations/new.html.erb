<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <div>
        <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :class => 'form-horizontal'}, method: :post) do |f| %>
            <div class="page-header">
              <h3>Resend confirmation instructions<small></small>
                <span class="pull-right">
                  <input type="submit" class="btn btn-primary" value="Submit" />
                </span>
              </h3>
            </div>

            <%= devise_error_messages! %>

            <fieldset>
              <%= f.input :email, class: 'input-normal',
                          :required => true,
                          :autofocus => true,
                          controls_html: { class: 'col-lg-8' },
                          label_html: { class: 'col-lg-4' },
                          input_html: { class: 'form-control', type: :email } %>
            </fieldset>
            <%= f.hidden_field :reset_password_token %>
        <% end %>
        <%= render partial: 'devise/shared/links' %>
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
