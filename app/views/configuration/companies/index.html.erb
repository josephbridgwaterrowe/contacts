<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h3>Companies<small></small>
        <span class="pull-right">
          <%= link_to 'New',
                      new_configuration_company_path,
                      :class => 'btn btn-default' %>
        </span>
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <table class="table table-striped table-with-link-column">
        <thead>
        <tr>
          <th>Name</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <% if @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td>
              <% if can?(:update, Company) %>
              <%= link_to edit_configuration_company_path(company, return_url: request.original_url),
                          class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <% end %>
            </td>
          </tr>
        <% end.empty? %>
            <tr>
              <td colspan="1">No companies found</td><td></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
