<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h3>Departments<small></small>
        <span class="pull-right">
          <%= link_to 'New',
                      new_configuration_department_path,
                      :class => 'btn btn-default' %>
        </span>
        </h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <table class="table table-striped table-with-link-column">
        <thead>
        <tr>
          <th>Name</th>
          <th>Company</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <% if @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td><%= department.company.name %></td>
            <td>
              <% if can?(:update, Department) %>
              <%= link_to edit_configuration_department_path(department, return_url: request.original_url),
                          class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <% end %>
            </td>
          </tr>
        <% end.empty? %>
          <tr>
            <td colspan="2">No departments found</td><td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
